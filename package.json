{
  "name": "root",
  "private": "true",
  "scripts": {
    "prepare": "lerna run --stream --sort prepare",
    "build:icons": "node ./script/build.js --input src/*.svg --output build/data.json && cp -r src build/svg",
    "clean": "node ./script/clean.js",
    "format": "prettier --write \"**/*.js{,on}\" \"**/*.md\"  \"**/*.mdx\"",
    "svgo": "svgo assets/icons --config .svgo.yml"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "cheerio": "^1.0.0-rc.3",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "js-yaml": "^4.0.0",
    "lerna": "^3.22.1",
    "lodash.merge": "^4.6.2",
    "microbundle": "^0.13.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "svgo": "^1.3.2",
    "trim-newlines": "^3.0.0",
    "typescript": "^4.1.3",
    "xo": "^0.37.1",
    "yargs": "^16.2.0"
  }
}
